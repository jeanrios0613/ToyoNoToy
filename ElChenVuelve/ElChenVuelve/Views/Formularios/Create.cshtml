@model ElChenVuelve.Models.Formulario

@{
    if (TempData["SuccessMessage"] != null)
    {
        <div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="modalTitle" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalTitle">MENSAJE</h5>
                    </div>
                    <div class="modal-body">
                        @TempData["SuccessMessage"]
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">OK</button>
                    </div>
                </div>
            </div>
        </div>
    }
}


<div class="form">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h3 class="text-center mb-4">Regístrate</h3>
        <hr />

        <h4 class="text-left mb-4">Datos Personales</h4>
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" placeholder="Nombre" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Apellido" class="control-label"></label>
                <input asp-for="Apellido" class="form-control" placeholder="Apellido" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" placeholder="example@correo.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Cedula" class="control-label">Identificación</label>
                <input asp-for="Cedula" class="form-control" placeholder="00-0000-0000" />
                <span asp-validation-for="Cedula" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Celular" class="control-label">Número de WhatsApp</label>
                <input asp-for="Celular" class="form-control" placeholder="0000-0000" />
                <span asp-validation-for="Celular" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="RedesSociales" class="control-label">Redes Sociales</label>
                <input asp-for="RedesSociales" class="form-control" placeholder="Coloca una red social" />
                <span asp-validation-for="RedesSociales" class="text-danger"></span>
            </div>
        </div>

        <h4 class="text-left mb-4">Datos de la Empresa</h4>

        <div class="row mb-3">
            <div class="col-md-6"> 
                <label asp-for="NombreEmpresa" class="control-label">Nombre de tu Emprendimiento</label>
                <input asp-for="NombreEmpresa" class="form-control" placeholder="Coloca el nombre de tu emprendimiento" />
                <span asp-validation-for="NombreEmpresa" class="text-danger"></span>
                
            </div>

            <div class="col-md-6">
                <label for="Rol">Actividad de Emprendimiento</label>
                @Html.DropDownListFor(m => m.ActividadEconomica, (IEnumerable<SelectListItem>)ViewBag.Items, "Actividad de Emprendimiento", new { @class = "form-control custom-dropdown", @required = "required" })
                <span asp-validation-for="ActividadEconomica" class="text-danger"></span>
            </div>


        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="DescripcionNegocio" class="control-label">Descripción de tu Negocio</label>
                <textarea asp-for="DescripcionNegocio" class="form-control" placeholder="¿A qué se dedica el negocio?"></textarea>
                <span asp-validation-for="DescripcionNegocio" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="MontoInversion" class="control-label">Monto de Inversión</label>
                <input asp-for="MontoInversion" class="form-control" placeholder="¿Cuánto dinero necesitas?" oninput="formatUSD(this)" />
                <span asp-validation-for="MontoInversion" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-12">
                <label asp-for="DescripcionInversion" class="control-label">Descripción de tu Inversión</label>
                <textarea asp-for="DescripcionInversion" class="form-control" placeholder="¿Cómo invertirás el dinero?"></textarea>
                <span asp-validation-for="DescripcionInversion" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Enviar" class="btn btn-primary" />
            <input type="reset" value="Limpiar" class="btn btn-secondary" />
        </div>

    </form>
</div>

@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
