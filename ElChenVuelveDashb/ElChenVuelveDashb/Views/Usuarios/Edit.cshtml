@model ElChenVuelveDashb.Usuario

@{
    Layout = "../Home/index";
}

<div class="card">
    <div class="head ">
        <h5>Lista de Usuario - Actualizar</h5>
    </div>
    <div class="card-footer text-right">
        <a asp-action="Index" asp-controller="Formularios" class="btn btn-secondary">Volver a la lista</a>
    </div>
    <hr>

    <div class="form">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" />


                <div class="col-md-3">

                    <div class="col-md-6">
                        <label asp-for="Username" class="control-label"></label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
             
                    <div class="col-md-6">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
            <div class="col-md-3">
                    <div class="col-md-6">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Correo" class="control-label"></label>
                        <input asp-for="Correo" class="form-control" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>
             </div>

              <div class="col-md-3">
                    <div class="col-md-6">
                        <label asp-for="FechaCreacion" class="control-label"></label>
                        <input asp-for="FechaCreacion" class="form-control" />
                        <span asp-validation-for="FechaCreacion" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="UltimoAcceso" class="control-label"></label>
                        <input asp-for="UltimoAcceso" class="form-control" />
                        <span asp-validation-for="UltimoAcceso" class="text-danger"></span>
                    </div>
               </div>
             <div class="col-md-3">
                    <div class="col-md-6">
                        <label asp-for="Rol" class="control-label"></label>
                        <input asp-for="Rol" class="form-control" />
                        <span asp-validation-for="Rol" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Estado" class="control-label"></label>
                        <input asp-for="Estado" class="form-control" />
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
             </div>
            <div class="col-md-3">
                <div class="col-md-6">
                    <label asp-for="FechaUltimaActualizacion" class="control-label"></label>
                    <input asp-for="FechaUltimaActualizacion" class="form-control" />
                    <span asp-validation-for="FechaUltimaActualizacion" class="text-danger"></span>
                </div>
             </div>
            <div class="col-md-6">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</div>