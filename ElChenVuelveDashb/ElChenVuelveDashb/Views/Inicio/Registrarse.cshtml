@model ElChenVuelveDashb.Usuario

@{
    Layout = "../Home/index";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registrarse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>


    <div class="container mt-5 pt-5">

        <div class="row justify-content-center">
            <div class="col-12 col-xl-4 col-md-6">

                <div class="card">
                    <div class="card-header">
                        Registrate
                    </div>
                    <div class="card-body">

                        <form asp-controller="Inicio" asp-action="Registrarse" method="post">

                            
                            <input class="form-control mb-3" type="text" placeholder="Nombre Usuario" required asp-for="Username" />
                            <input class="form-control mb-3" type="password" placeholder="Contraseña" required asp-for="Password" />
                            <input class="form-control mb-3" type="text" placeholder="Nombre Completo" asp-for="Nombre" required />
                            <input class="form-control mb-3" type="email" placeholder="Correo" asp-for="Correo" required />
                            <div class="form-group">
                                <!--label for="Rol">Selecciona un Rol</!--label>-->
                                @Html.DropDownListFor(m => m.Rol, (SelectList)ViewBag.Userprofiles, "--Seleccione un Rol", new { @class = "form-control custom-dropdown", @required = "required" })
                                <span asp-validation-for="Rol" class="text-danger"></span>
                            </div>

                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-primary" type="submit">Guardar</button>
                            </div>
                            @if (ViewData["Mensaje"] != null)
                            {

                                <div class="form-group">
                                    <div class="alert alert-danger" role="alert">
                                        @ViewData["Mensaje"]
                                    </div>
                                </div>
                            }
                            
                        </form>

                    </div>

                </div>

            </div>
        </div>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
