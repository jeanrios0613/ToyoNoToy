@model object

@{
    Layout = "_Layout";
 
    ViewData["Title"] = "Procesos";
    int totalPages = ViewBag.TotalPages;
    int currentPage = ViewBag.CurrentPage; 
    int delta = 2;
    int startPage = Math.Max(2, currentPage - delta);
    int endPage = Math.Min(totalPages - 1, currentPage + delta);
}
 
</br> 
<div class="container">
    <div class="card-custom">
        <div class="container-fluid d-flex align-items-center justify-content-between">
            <div   class="p-table__opts__navs">
                <div class="p-table__opts__navs__titles">
                    <span  class="p-table__opts__navs__titles__title">
                        Tareas
                        Pendientes
                    </span>
                    <span class="p-table__opts__navs__titles__subtitle">
                        Administra y monitorea
                        eficazmente todas tus actividades.
                    </span><!----><!---->
                </div><!----><!---->
            </div>
            <div class="d-flex align-items-center gap-3">
                <button class="btn btn-outline-secondary">👤</button>
                <button class="btn btn-outline-secondary">🔔</button>
                <button class="btn btn-outline-secondary">⚙️</button>
                <input type="text" class="form-control" placeholder="Buscar" style="width: 200px; height:40px;">
  
            </div>
        </div>
 
        <!-- Tabla con scroll -->
        <div class="scrollable-table-container">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr> 
                        <th style="min-width: 75px; width: 75px;" ></th>
                        <th style="min-width: 150px; width: 150px; top: 0px; z-index: 100;">
                            <div class="mat-sort-header-container">
                                Nombre de Tarea
                            </div>
                        </th>
                        <th style="min-width: 200px; width: 300px;">
                            <div class="mat-sort-header-container"> 
                                Nombre del Proceso
                            </div>
                        </th>
                        <th style="min-width: 131.512px; width: 135px; top: 0px; z-index: 100;">
                            <div class="mat-sort-header-container">
                                Estatus
                            </div>
                        </th>
                        <th style ="min-width:50px; width: 100px; top: 0px; z-index: 100;">
                            <div class="mat-sort-header-container">
                                Bandeja
                            </div>
                         </th>
                        <th style="min-width:50px; width: 100px; top: 0px; z-index: 100;">
                            <div class="mat-sort-header-container">
                                Duración
                            </div>
                        </th>
                        <th style ="min-width:50px; width: 100px; top: 0px; z-index: 100;">
                            <div class="mat-sort-header-container">
                            Fecha de Creación
                            </div>
                        </th>
                        <th style="min-width: 131.512px; width: 135px; top: 0px; z-index: 100;">
                            <div class="mat-sort-header-container">
                                Asignado
                            </div>
                        </th> 
                    </tr>
                </thead>
                <tbody>
                    @if (Model is IEnumerable<managerelchenchenvuelve.Models.DatosReca> formularios)
                    {
                        foreach (var item in formularios)
                        {
                         
                            <tr> 
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="~/img/contacto.png" alt="" style="width: 30px; height: 30px" class="rounded-circle" />
                                    </div>
                                </td>
                                <td style="cursor: pointer; min-width: 150px; width: 200px;"> 
                                        <div class="p-table__content__cell">
                                            @Html.DisplayFor(m => item.Etapa)
                                         </div> 
                                </td>
                                <td style="cursor: pointer; min-width: 150px; width: 300px;"> 
                                    <div class="p-table__content__cell">
                                        <a class="nav-link" href='../Requests/Solicitud?id=@item.CodigoDeSolicitud'>
                                            @Html.DisplayFor(m => item.CompletaActividad)
                                        </a>
                                    </div>
                                </td>
                                <td style="cursor: pointer; min-width: 131.512px; width: 135px;">
                                    <span class="badge badge-status" style="background-color:blanchedalmond">
                                        En curso
                                     </span>
                                 </td>
                                <td style="cursor: pointer; min-width: 150px; width: 200px;">
                                    <span class="p-table__content__badge p-table__content__badge__text__active" style="background-color:cornflowerblue">
                                        <span class="p-table__content__badge__text"> Revisión y validación</span>
                                    </span>
                                 </td>
                                <td style="cursor: pointer; min-width: 140px; width: 140px;"><div class="p-table__content__cell">🟢 @Html.DisplayFor(m => item.TiempoTranscurrido)</div></td>
                                <td style="cursor: pointer; min-width: 150px; width: 150px;"><div class="p-table__content__cell">@Html.DisplayFor(m => item.FechaFormateada)</div></td>
                                <td style="cursor: pointer; min-width: 150px; width: 150px;"><div class="p-table__content__cell">@Html.DisplayFor(m => item.UserName)</div></td>
                            
                            </tr>
                        }
                    }
                    else if (Model is managerelchenchenvuelve.Models.DatosReca formulario)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => formulario.Etapa)</td>
                            <td>@Html.DisplayFor(m => formulario.CompletaActividad)</td>
                            <td><span class="badge badge-status">En curso</span></td>
                            <td><span class="badge badge-bandeja">Revisión y validación</span></td>
                            <td>🟢 @Html.DisplayFor(m => formulario.TiempoTranscurrido)</td>
                            <td>@Html.DisplayFor(m => formulario.FechaFormateada)</td>
                            <td>N/A</td>
                            <td class="acciones">
                                <button type="button" class="btn btn-primary" onclick="window.location.href='../Process/solicitud?id=@formulario.CodigoDeSolicitud'">✎</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    
        <!-- Paginación -->
        <nav  style="height:40px">
            <ul class="pagination">
                <!-- Primera página -->
                <li class="page-item @(currentPage == 1 ? "active" : "")">
                    <a class="page-link" href="../Process/Index?page=1">1</a>
                </li>

                @if (startPage > 2)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }

                @for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(currentPage == i ? "active" : "")">
                        <a class="page-link" href="../Process/Index?page=@i">@i</a>
                    </li>
                }

                @if (endPage < totalPages - 1)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }

                @if (totalPages > 1)
                {
                    <li class="page-item @(currentPage == totalPages ? "active" : "")">
                        <a class="page-link" href="../Process/Index?page=@totalPages">@totalPages</a>
                    </li>
                }
            </ul>
        </nav>

    </div>


</div>
